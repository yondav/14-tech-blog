<div class="container home-feed">
  <div class="container-fluid bgimage">
    <div class="overlay">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h1>Recent Posts</h1>
        </div>
      </div>
    </div>
{{#each posts as |post|}}
    <div class="row no-gutters post-bar">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 post-title">
      </div>
    </div>
    <div class="row no-gutters post-bar">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h4 class="post-title">{{ post.post_title }}: {</h4>
        <article class="post">
        <span class="author">// {{ post.post_author.username }}</span>
        <br>
        <span class="created">// {{ format_date post.createdAt }}</span>
          <p class="post-text">
            post: <span class="string">'{{ post.blog_content }}'</span>,
          </p>
          <p class="post-text">comments: <span class="comments-expand">{...} <i class="fas fa-sort-down expand"></i></span></p>
          <div class="comments indent hide">
            <p class="bracket">[</p>
            <div class="indent">
              {{#each post.post_comments as |comment|}}
              <p class="curly">{</p>
              <div class="indent">
                <p>comment: <span class="string">'{{ comment.comment_content }}'</span>,</p>
                {{#each comment.comment_author as |author|}}
                <p>author: <span class="string">'{{ author }}'</span>,</p>
                {{/each}}
                <p class="created">// {{ format_date comment.createdAt }}</p>
              </div>
              <p class="curly">},</p>
              {{/each}}
            </div>
            <p class="bracket">],</p>
          </div>
        </article>
        <h4 class="close-post">},</h4>
      </div>
    </div>
{{/each}}
  </div>
</div>
<script src="/js/homepage.js"></script>
